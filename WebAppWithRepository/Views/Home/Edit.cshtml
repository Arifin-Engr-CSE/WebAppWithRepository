@model WebAppWithRepository.Models.Company
@{ ViewData["Title"] = "Create Page"; }

<h2 class="text-info text-center"> Edit Company</h2>
<br />

<div class="row mt-2">
    <div class="col-md-4 offset-2">
        <form asp-action="Edit" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input asp-for="CompanyId" type="hidden" />



            <div class="form-group row">
                <label asp-for="ComapnyName" class=" col-sm-4 display-4 col-form-label"></label>
                <div class="col-sm-8">
                    <input asp-for="ComapnyName" class="form-control" />
                </div>
                <span asp-validation-for="ComapnyName" class="text-danger"></span>
            </div>

            <div class="form-group row">
                <label asp-for="City" class=" col-sm-4 display-4 col-form-label"></label>
                <div class="col-sm-8">
                    <input asp-for="City" class="form-control" />
                </div>
                <span asp-validation-for="City" class="text-danger"></span>
            </div>







            <div class="form-group">

                <input type="submit" value="Update" class="btn btn-success" />

            </div>
        </form>
    </div>
</div>